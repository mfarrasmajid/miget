<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Ewallet"
    tools:showIn="@layout/activity_ewallet">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="520dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="68dp">
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="163dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="-163dp"
                android:background="#edb338"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/icon" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginTop="30dp"
                android:background="#eeeeee"
                android:gravity="center_vertical"
                android:paddingLeft="18dp"
                android:text="TOP UP E-WALLET" />

            <TextView
                android:id="@+id/banktuju"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:text="Pilih E-Wallet Tujuan" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="20dp" />

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintTop_toBottomOf="@+id/spinner"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/norektext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:text="Masukkan Nomor Tujuan"
                app:layout_constraintBottom_toTopOf="@+id/norek"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/norek"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="20dp"
                android:background="@android:color/transparent"
                android:ems="10"
                android:inputType="number"
                android:textColor="#4b4b4b"
                android:textColorHint="#4b4b4b"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinner" />

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintTop_toBottomOf="@+id/norek"
                tools:layout_editor_absoluteX="4dp" />

            <TextView
                android:id="@+id/banktuju2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="4dp"
                android:text="Alokasi Dana"
                app:layout_constraintBottom_toTopOf="@+id/spinner2"
                app:layout_constraintStart_toStartOf="parent" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                app:layout_constraintTop_toBottomOf="@+id/norek"
                tools:layout_editor_absoluteX="0dp" />

            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/nominaltext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="8dp"
                android:text="Masukkan Nominal"
                app:layout_constraintBottom_toTopOf="@+id/nominal"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/nominal"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="20dp"
                android:background="@android:color/transparent"
                android:ems="10"
                android:inputType="number"
                android:textColor="#4b4b4b"
                android:textColorHint="#4b4b4b" />

            <View
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignBottom="@+id/norek"
                android:layout_marginTop="4dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintTop_toBottomOf="@+id/nominal"
                tools:layout_editor_absoluteX="4dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="#eeeeee"
                android:gravity="center_vertical"
                android:paddingLeft="18dp"
                android:text="RECENT TRANSACTION"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nominal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/jam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp"
                    android:text="08:43"
                    android:textColor="#1d1d26"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/ampm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="80dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="30dp"
                    android:text="AM"
                    android:textColor="#881d1d26"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="26dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="45dp"
                    android:text="01/01/2019"
                    android:textColor="#1d1d26"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="120dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="20dp"
                    android:text="Homer Simpsons"
                    android:textColor="#1d1d26"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/rincian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="120dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="45dp"
                    android:layout_marginBottom="20dp"
                    android:text="Bank BTPN Ke 08XXXXXXXXXX"
                    android:textColor="#881d1d26"
                    android:textSize="15sp" />

                <View
                    android:id="@+id/underline"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginTop="85dp"
                    android:background="@android:color/darker_gray"
                    tools:layout_editor_absoluteX="4dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/jam2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp"
                    android:text="08:45"
                    android:textColor="#1d1d26"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/ampm2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="80dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="30dp"
                    android:text="AM"
                    android:textColor="#881d1d26"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tanggal2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="26dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="45dp"
                    android:text="02/01/2019"
                    android:textColor="#1d1d26"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="120dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="20dp"
                    android:text="Homer Simpsons"
                    android:textColor="#1d1d26"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/rincian2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="120dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="45dp"
                    android:layout_marginBottom="20dp"
                    android:text="Bank BTPN Ke 08XXXXXXXXXX"
                    android:textColor="#881d1d26"
                    android:textSize="15sp" />

                <View
                    android:id="@+id/underline2"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginTop="85dp"
                    android:background="@android:color/darker_gray"
                    tools:layout_editor_absoluteX="4dp" />
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button2"
        android:layout_width="418dp"
        android:layout_height="61dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/checkbox"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>